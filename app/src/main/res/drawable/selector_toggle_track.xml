<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/www_green" />
            <corners android:radius="@dimen/size_100" />
            <stroke android:width="@dimen/size_1" android:color="#8c8c8c" />
            <size android:height="@dimen/size_20" />
        </shape>
    </item>


    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <solid android:color="@color/gray_200" />
            <corners android:radius="@dimen/size_100" />
            <stroke android:width="@dimen/size_1" android:color="@color/gray_200" />
            <size android:height="@dimen/size_20" />
        </shape>
    </item>

</selector>