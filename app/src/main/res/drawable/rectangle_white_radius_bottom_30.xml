<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle" >
            <solid android:color="@color/www_white"/>
            <corners android:bottomLeftRadius="@dimen/size_30" android:bottomRightRadius="@dimen/size_30"/>
        </shape>

    </item>
    <item>
        <shape android:shape="rectangle" >
            <gradient
                android:startColor="@color/www_green_transparent_20"
                android:endColor="@color/www_white"
                android:centerColor="@color/www_green_transparent_8"
                android:angle="270"/>
            <corners android:bottomLeftRadius="@dimen/size_30" android:bottomRightRadius="@dimen/size_30"/>
        </shape>
    </item>

</layer-list>
