<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="270dp"
    android:background="@drawable/background_custom_dialog_push"
    android:layout_height="180dp">

    <TextView
        android:id="@+id/tv1_system_custom_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="19dp"
        android:text="&apos;WWW&apos;에서 알림을 \n 보내고자 합니다."
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <TextView
        android:id="@+id/tv2_system_custom_dialog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/system_dialog_alarm"
        android:layout_marginTop="4dp"
        android:gravity="center"
        android:textSize="13sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv1_system_custom_dialog"/>


    <View
        android:id="@+id/view_system_custom_dialog"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_150"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv2_system_custom_dialog"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="11dp"
        android:text="허용 안 함"
        android:fontFamily="@font/spoqa_han_sans_neo_regular"
        android:textColor="#007AFF"
        android:textSize="17sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="parent" />
    
    <View
        android:layout_width="1dp"
        android:layout_height="44dp"
        android:layout_marginStart="135dp"
        android:layout_marginTop="40dp"
        android:background="@color/gray_150"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:layout_marginBottom="11dp"
        android:text="허용"
        android:fontFamily="@font/spoqa_han_sans_neo_bold"
        android:textColor="#007AFF"
        android:textSize="17sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>