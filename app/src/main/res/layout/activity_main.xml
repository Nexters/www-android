<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginStart="20dp"
    android:layout_marginEnd="20dp"
    tools:context=".ui.MainActivity">

    <LinearLayout
        android:id="@+id/layout_metting_whole"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="53dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/status_bar_meeting_process5"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/status_bar5"
            android:layout_marginBottom="25dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.30"
                android:textSize="12dp"
                android:fontFamily="@font/spoqa_han_sans_regular"
                android:textColor="#696969"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" ~ "
                android:textSize="12dp"
                android:textColor="#696969"
                android:fontFamily="@font/spoqa_han_sans_regular"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2023.01.31"
                android:textSize="12dp"
                android:textColor="#696969"
                android:fontFamily="@font/spoqa_han_sans_regular"/>

        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="가능한 날짜와 시간대를\n선택해주세요."
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:textColor="@color/black"
            android:textSize="22dp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:elevation="20dp"
            android:background="@drawable/background_meeting_time_check"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="25dp"
                android:layout_marginEnd="15dp"
                android:layout_marginStart="72dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/vector_left_meeting_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_left"/>

                <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1" />

                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    tools:listitem="@layout/item_date_process5"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/vector_right"
                    android:layout_marginEnd="18dp"
                    android:layout_marginStart="20dp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_meeting_morning"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginEnd="20dp"
                android:layout_marginTop="13dp"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:id="@+id/layout_meeting_morning_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="아침"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="06 - 12시"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ellipse_meeting_morning"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="26dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_morning1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check" />

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_morning2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_morning3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_morning4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="오후"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="11 - 16시"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_ellipse_meeting_afternoon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="26dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_afternoon1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check" />

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_afternoon2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_afternoon3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_afternoon4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:text="저녁"
                        android:textColor="@color/black"
                        android:textSize="12dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="17 - 20시"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="26dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_evening_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check" />

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_evening_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_evening_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_evening_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="20dp"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center_vertical"
                android:layout_marginTop="13dp"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="20dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="밤"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="21 - 24시"
                        android:textSize="12dp"
                        android:fontFamily="@font/spoqa_han_sans_bold"
                        android:textColor="@color/black"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="26dp"
                    android:orientation="horizontal">

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_night_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check" />

                    <ImageView
                        android:id="@+id/ellipse_meeting_time_night_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_night_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>


                    <ImageView
                        android:id="@+id/ellipse_meeting_time_night_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ellipse_meeting_time_check"
                        android:layout_marginStart="19dp"/>

                </LinearLayout>


        </LinearLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="58dp"
                android:layout_marginStart="18dp"
                android:layout_marginTop="26dp"
                android:layout_marginEnd="18dp"
                android:background="@drawable/btn_background_meeting_time_check"
                android:fontFamily="@font/spoqa_han_sans_bold"
                android:text="날짜를 선택해주세요!"
                android:textColor="#9b9b9b"
                android:layout_marginBottom="25dp"
                android:textSize="14dp" />

    </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="다음"
            android:textSize="16dp"
            android:textColor="#545454"
            android:background="@drawable/btn_background_time_check_next"
            android:fontFamily="@font/spoqa_han_sans_bold"
            android:layout_marginTop="80dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>